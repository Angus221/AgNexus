{
  "manifest_version": 3,
  "name": "AG Nexus",
  "version": "1.1.0",
  "description": "智能生产力中枢 - 导航、指令、提示词、待办、AI助理",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "打开 AG Nexus"
  },
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "alarms",
    "notifications",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/floatball.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/icon.jpg"],
      "matches": ["<all_urls>"]
    }
  ]
}
