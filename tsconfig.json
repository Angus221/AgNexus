{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/sidepanel/components/*"],
      "@features/*": ["./src/sidepanel/features/*"],
      "@services/*": ["./src/sidepanel/services/*"],
      "@contexts/*": ["./src/sidepanel/contexts/*"],
      "@hooks/*": ["./src/sidepanel/hooks/*"]
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/sidepanel/**/*", "src/types/**/*"],
  "exclude": ["src/main.tsx", "src/provider.tsx", "src/App.tsx", "src/pages/**/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
